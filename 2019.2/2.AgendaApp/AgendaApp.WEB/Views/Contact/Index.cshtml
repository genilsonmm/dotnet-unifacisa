@model  IEnumerable<AgendaApp.MODEL.Contact>

@{
    ViewData["Title"] = "Contatos";
}

<h1>Contatos</h1>

<a asp-controller="Contact" asp-action="Create">Novo contato</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Editar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
        <tr>
            <th>@contact.Id</th>
            <td>@contact.Name</td>
            <td><a asp-action="Edit" asp-route-id="@contact.Id">Editar</a></td>
            <td><a asp-action="Delete" asp-route-id="@contact.Id">Excluir</a></td>
        </tr>
        }
    </tbody>
</table>
